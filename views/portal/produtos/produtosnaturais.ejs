<%- include('../header') %>
<div id="banner" class="produto-view__banner">
  <div class="row justify-content-center h-100" style="background: no-repeat center/cover url('./public/img/produtos_naturais.jpg')">
    <div class="col-md-8 col-lg-6">
      <div class="row align-items-end" style="height:100%;">
        <div class="col d-flex justify-content-center align-items-center produto-view__title">
          <span>Produtos Naturais</span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="produto-view__content">
  <div class="row mt-5">
    <div class="col">
      <div class="row justify-content-center px-2">
        <div class=" col-md-8 col-lg-6 px-4 p-md-0">
          A Aplinova oferece o maior portifólio de produtos naturais diferenciados para desenvolvimento de projetos com alta qualidade e sabor.
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex flex-wrap mt-5 produto-view__categories">
    <%if(produtos){%>
      <% produtos.forEach((item) => { %>
        <%- include('../categoria-item', {itemName: item.dataValues.titulo}) %>
      <% })%>
    <%}%>
  </div>
  <div class="row base-container my-5 mx-0">
    <div class="col produto-view__segments">
      <div class="row flex-nowrap align-items-center p-3">
        <i class="fas fa-square"></i><span><b>Segmentos:</b> Alimentos, Bebidas, Suplementos, Cosméticos e Nutrição Animal.</span>
      </div>
    </div>
  </div>
</div>
<%- include('../footer') %>

<%- include('./header') %>
  <form action="/login/send" method='post'>
    <div class="input-group mb-3">
      <div class="input-group-append">
        <span class="input-group-text logo"><i class="fas fa-user"></i></span>
      </div>
      <input type="text" name="email" class="form-control input_user" value="" placeholder="email" spellcheck="false">
    </div>
    <div class="input-group mb-2">
      <div class="input-group-append">
        <span class="input-group-text logo"><i class="fas fa-key"></i></span>
      </div>
      <input type="password" name="password" class="form-control input_pass" value="" placeholder="password" spellcheck="false">
    </div>
    <%if(error){%>
      <div><span style="color: red;"><%=error%></span></div>
    <%}%>
    <div class="d-flex justify-content-center mt-3 login_container">
      <button type="submit" name="button" class="btn login_btn">Login</button>
    </div>
  </form>
<%- include('./footer') %>
